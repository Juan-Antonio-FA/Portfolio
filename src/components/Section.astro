---
const {title} = Astro.props;
---

<section>
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style>
    section{
        max-width: 700px;
        margin: 0 auto 46px;
    }
    title{
        font-size: 1.rem;
        font-weight: 700;
        margin-bottom: 8px;
        line-height: 1.5rem;
    }
</style>